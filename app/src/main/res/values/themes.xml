<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CleanNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="fontFamily">@font/raleway_light</item>

        <item name="shapeAppearanceSmallComponent">@style/Shapes.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shapes.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shapes.Large</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Shapes -->
    <style name="Shapes.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="Shapes.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Shapes.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Toolbars -->
    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>
    <style name="Toolbar.Invisible">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="colorButtonNormal">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="Button.Dark">
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
        <item name="colorButtonNormal">@color/primaryDarkColor</item>
    </style>
    <style name="Button.Cancel">
        <item name="android:backgroundTint">@color/red_500</item>
        <item name="colorButtonNormal">@color/red_500</item>
    </style>
    <style name="Button.Disabled">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="colorButtonNormal">@color/grey</item>
    </style>
    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="Button.Text.Accent">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="Button.Outlined.Accent">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    <style name="Button.Group" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_extra_small</item>
    </style>

    <!-- FAB -->
    <style name="Fab.Extended" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text -->
    <style name="Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="Text.Small.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="Text.Large.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="Text.Large2">
        <item name="android:textSize">@dimen/text_large_2</item>
    </style>
    <style name="Text.Large2.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="Text.ExtraLarge">
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>
    <style name="Text.ExtraLarge.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="TextHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>
    <style name="TextError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red_500</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Cards -->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearance">@style/Shapes.Medium</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Misc -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
